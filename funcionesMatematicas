<!DOCTYPE html>

<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>Calculadora</title>
	
	<script>
	
		function validarInput(){
		
			if(document.getElementById("ValorDividendo").value !=""){
				dividendo = document.getElementById("ValorDividendo").value;
			}
			if(document.getElementById("ValorDivisor").value !=""){
				divisor = document.getElementById("ValorDivisor").value;
			}
			
			mod(dividendo, divisor)
		
		}
	
		function mod(dividendo , divisor) { // Funci贸n modulo, regresa el residuo de una divisi贸n
		
			resDiv = dividendo / divisor;
			parteEnt = Math.floor(resDiv);	// Obtiene la parte Entera de resDiv 
			parteFrac = resDiv - parteEnt;	// Obtiene la parte Fraccionaria de la divisi贸n
			modulo = Math.round(parteFrac * divisor);	// Regresa la parte fraccionaria * la divisi贸n (modulo) 
			
			alert(modulo);
			return modulo; 
		}
		
		

	</script>
</head>

<body>
	<h1>Funciones para Calculos</h1>
	
	<p>Modulo</p>
	<table >
		<tr>
			<td>Ingresar Dividendo</td>
			<td><input name="InpDividendo" type="text" id="ValorDividendo"></td>
		</tr>
		<tr>
			<td>Ingresar Divisor</td>
			<td><input name="InpDivisor" type="text" id="ValorDivisor"></td>
		</tr>
		<tr>
			<td><button onclick="validarInput()">Calcular Modulo</button></td>
		</tr>
	</table>

	
